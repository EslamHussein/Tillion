<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">


    <ImageView
            android:id="@+id/targetImageView"
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/targetNameTextView"
            android:text="mini coper"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/targetImageView"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/targetImageView"
            app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
            android:id="@+id/targetPriceTextView"
            android:text="31$"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/targetImageView"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/targetNameTextView"
            app:layout_constraintEnd_toEndOf="parent"/>


    <ProgressBar
            android:id="@+id/targetProgress"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            app:layout_constraintTop_toBottomOf="@id/targetImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:maxHeight="10dip"
            android:minHeight="10dip"
            android:progress="0"
            android:secondaryProgress="100"
            android:progressDrawable="@drawable/progress_limit" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/targetPersantageTextView"/>


    <TextView
            android:id="@+id/targetPersantageTextView"
            android:text="91%"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/targetProgress"
            app:layout_constraintBottom_toBottomOf="@id/targetProgress"
            app:layout_constraintEnd_toEndOf="parent"/>


    <TextView android:id="@+id/savedAmountLabelTextView"
              android:text="Saved amount:"
              style="@style/TextAppearance.MaterialComponents.Headline6"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/targetPersantageTextView"
              app:layout_constraintStart_toStartOf="parent"/>

    <TextView android:id="@+id/savedAmountTextView"
              android:text="12"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/TextAppearance.MaterialComponents.Body1"
              android:layout_marginStart="8dp"
              app:layout_constraintTop_toTopOf="@id/savedAmountLabelTextView"
              app:layout_constraintBottom_toBottomOf="@id/savedAmountLabelTextView"
              app:layout_constraintStart_toEndOf="@id/savedAmountLabelTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>